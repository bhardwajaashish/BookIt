<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar"
    tools:context="com.example.aashish.bookit.Create">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:password="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:background="@drawable/shape"
        android:hint="Choose a Password"
        android:id="@+id/create_pass"
        
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/create_pass"
        android:background="@drawable/shape"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:hint="Retype Password"
        android:password="true"
        android:id="@+id/retype"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="Create"
        android:textColor="@color/toolbar"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/shape"
        android:id="@+id/create_button"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"


        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:background="@drawable/shape"
        android:hint="Username"
        android:layout_marginBottom="10dp"
        android:id="@+id/username"
        android:layout_above="@+id/create_pass"
        android:layout_centerHorizontal="true"

        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/username"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:hint="Email"
        android:id="@+id/email"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:hint="Phone"
        android:inputType="number"
        android:background="@drawable/shape"
        android:textAlignment="center"
        android:layout_below="@+id/retype"
        android:id="@+id/phone"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>
